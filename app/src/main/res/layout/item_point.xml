<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <TextView
        android:id="@+id/pointXTitleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        android:text="Point X"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/pointYTitleText"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/pointXValueText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintEnd_toStartOf="@+id/pointYValueText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pointXTitleText"
        tools:text="Value X" />

    <TextView
        android:id="@+id/pointYTitleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/pointXTitleText"
        android:text="Point Y"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/pointYValueText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/pointXValueText"
        app:layout_constraintTop_toBottomOf="@+id/pointYTitleText"
        tools:text="Value Y" />


</androidx.constraintlayout.widget.ConstraintLayout>